{
  "name": "Payment",
  "type": "object",
  "properties": {
    "invoice_id": {
      "type": "string",
      "description": "Reference to invoice"
    },
    "invoice_number": {
      "type": "string",
      "description": "Invoice number for display"
    },
    "client_id": {
      "type": "string",
      "description": "Reference to client"
    },
    "client_name": {
      "type": "string",
      "description": "Client name"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Payment date"
    },
    "amount": {
      "type": "number",
      "description": "Payment amount"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "cash",
        "bank_transfer",
        "card",
        "cheque"
      ],
      "description": "Payment method"
    },
    "reference": {
      "type": "string",
      "description": "Transaction reference"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "invoice_id",
    "client_name",
    "date",
    "amount",
    "payment_method"
  ]
}