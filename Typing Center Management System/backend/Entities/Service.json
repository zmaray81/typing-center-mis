{
  "name": "Service",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Service name"
    },
    "category": {
      "type": "string",
      "enum": [
        "visa_service",
        "company_service",
        "labour_service",
        "other"
      ],
      "description": "Service category"
    },
    "service_type": {
      "type": "string",
      "enum": [
        "job_offer",
        "labour_insurance",
        "labour_payment",
        "evisa_inside",
        "evisa_outside",
        "change_status",
        "medical_eid",
        "contract_submission",
        "stamping",
        "license_renewal",
        "new_license",
        "establishment_card",
        "labour_card",
        "cancellation",
        "contract_modification",
        "trade_name",
        "ejari",
        "payment_voucher",
        "memorandum_signing",
        "health_certificate",
        "service_charge",
        "other"
      ],
      "description": "Specific service type"
    },
    "default_price_dubai": {
      "type": "number",
      "description": "Default price for Dubai (AED)"
    },
    "default_price_other_emirates": {
      "type": "number",
      "description": "Default price for other emirates (AED)"
    },
    "is_active": {
      "type": "boolean",
      "description": "Whether service is currently offered"
    },
    "description": {
      "type": "string",
      "description": "Service description"
    }
  },
  "required": [
    "name",
    "category",
    "service_type"
  ]
}