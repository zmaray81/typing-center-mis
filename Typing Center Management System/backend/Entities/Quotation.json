{
  "name": "Quotation",
  "type": "object",
  "properties": {
    "quotation_number": {
      "type": "string",
      "description": "Auto-generated quotation number"
    },
    "client_id": {
      "type": "string",
      "description": "Reference to client"
    },
    "client_name": {
      "type": "string",
      "description": "Client/Company name"
    },
    "person_name": {
      "type": "string",
      "description": "Person name (for visa services)"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Quotation date"
    },
    "service_category": {
      "type": "string",
      "enum": [
        "full_visa_inside",
        "full_visa_outside",
        "labour_card_new_renewal",
        "visa_cancellation",
        "labour_card_cancellation",
        "contract_modification",
        "company_license_renewal",
        "new_license",
        "other"
      ],
      "description": "Service category for template selection"
    },
    "service_description": {
      "type": "string",
      "description": "Description if 'other' selected"
    },
    "items": {
      "type": "array",
      "description": "Line items",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          }
        }
      }
    },
    "subtotal": {
      "type": "number",
      "description": "Subtotal amount"
    },
    "include_vat": {
      "type": "boolean",
      "description": "Whether to include VAT"
    },
    "vat_amount": {
      "type": "number",
      "description": "VAT amount (5%)"
    },
    "total": {
      "type": "number",
      "description": "Total amount"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "sent",
        "approved",
        "rejected",
        "converted"
      ],
      "description": "Quotation status"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "client_name",
    "date",
    "items",
    "total",
    "status"
  ]
}