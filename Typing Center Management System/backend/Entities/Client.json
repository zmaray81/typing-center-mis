{
  "name": "Client",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "Auto-generated unique client ID (CLI-YYYY-XXXX)"
    },

    "client_type": {
      "type": "string",
      "enum": ["company", "individual"],
      "default": "company"
    },

    "company_name": {
      "type": "string"
    },

    "contact_person": {
      "type": "string"
    },

    "email": {
      "type": "string"
    },

    "phone": {
      "type": "string"
    },

    "trade_license_number": {
      "type": "string"
    },

    "emirate": {
      "type": "string",
      "enum": [
        "dubai",
        "sharjah",
        "ajman",
        "abu_dhabi",
        "ras_al_khaimah",
        "fujairah",
        "umm_al_quwain"
      ],
      "default": "dubai"
    },

    "address": {
      "type": "string"
    },

    "service_type_required": {
      "type": "string",
      "enum": [
        "new_company_license",
        "company_license_renewal",
        "full_visa_inside",
        "full_visa_outside",
        "labour_card_new_renewal",
        "visa_cancellation",
        "labour_card_cancellation",
        "contract_modification",
        "other"
      ],
      "default": "full_visa_inside"
    },

    "service_type_other": {
      "type": "string"
    },

    "is_new_client": {
      "type": "boolean",
      "default": true
    },

    "notes": {
      "type": "string"
    },

    "isHiddenFromClientList": {
      "type": "boolean",
      "default": false,
      "description": "Soft delete flag for Clients page"
    },

    "created_date": {
      "type": "datetime",
      "auto": true
    }
  },

  "required": []
}
